      <label for="stop">Stop point:</label><input type="text" id="stop" value="Birr, Offaly"> <br>
      <label for="dest">Destination:</label><input type="text" id="dest" value="Mallow, Cork">  <br>
      <label for="">Vehicle:</label><input type="text" id="vehicle">  <br>
  </b></form>
  </div>
    
