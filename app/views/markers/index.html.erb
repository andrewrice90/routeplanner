<center><h1>Bridge Locations</h1>

<div id="search">
  <%= render :partial => 'markers/search' %>

</div>
<br>
<div>
<table class="hovertable">

  <tr>
    <th><%= sortable "address" %></th>
    <th><%= sortable "county" %></th>
    <th><%= sortable "height" %></th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @markers.each do |marker| %>
  <tr>
    <td><%= marker.address %></td>
    <td><%= marker.county %></td>
    <td><%= marker.height %></td>
    <td><%= marker.latitude %></td>
    <td><%= marker.longitude %></td>
    <td><%= link_to 'View', marker %></td>
    <td><%= link_to 'Update', edit_marker_path(marker) %></td>
    <td><%= link_to 'Delete', marker, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br> 
</div>
<%= link_to 'New Marker', new_marker_path %>
